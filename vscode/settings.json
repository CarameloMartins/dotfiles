{
    "editor.renderWhitespace": "all",
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.rulers": [
        80,
        100,
        120
    ],
    "extensions.ignoreRecommendations": false,
    "workbench.startupEditor": "newUntitledFile",
    "git.enableSmartCommit": true,
    "window.zoomLevel": 0,
    "latex-workshop.view.pdf.viewer": "tab",
    "workbench.iconTheme": "material-icon-theme",
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true
    },
    "python.formatting.autopep8Args": [
        "--max-line-length",
        "120"
    ],
    "git.confirmSync": false,
    "editor.formatOnSave": true,
    "explorer.confirmDragAndDrop": false,
    "[latex]": {
        "editor.fontSize": 14,
        "editor.wordWrap": "on"
    },
    "breadcrumbs.enabled": true,
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "--shell-escape",
                "%DOC%"
            ]
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-shell-escape",
                "%DOC%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "files.watcherExclude": {
        "**/.tox/**": true,
        "**/build/**": true,
        "**/dist/**": true
    },
    "python.analysis.cachingLevel": "Library",
    "python.autoComplete.addBrackets": true,
    "python.autoUpdateLanguageServer": false,
    "python.dataScience.allowImportFromNotebook": false,
    "python.dataScience.addGotoCodeLenses": false,
    "python.dataScience.allowLiveShare": false,
    "python.dataScience.askForKernelRestart": false,
    "python.dataScience.askForLargeDataFrames": false,
    "python.dataScience.changeDirOnImportExport": false,
    "python.dataScience.collapseCellInputCodeByDefault": false,
    "python.dataScience.colorizeInputBox": false,
    "python.dataScience.debugJustMyCode": false,
    "python.dataScience.decorateCells": false,
    "python.dataScience.enableAutoMoveToNextCell": false,
    "python.dataScience.enabled": false,
    "python.dataScience.enableCellCodeLens": false,
    "python.dataScience.enablePlotViewer": false,
    "python.experiments.enabled": false,
    "python.formatting.autopep8Path": "",
    "go.formatTool": "gofmt",
    "editor.minimap.renderCharacters": false,
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "go.useLanguageServer": true,
    "[go]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        // Optional: Disable snippets, as they conflict with completion ranking.
        "editor.snippetSuggestions": "none"
    },
    "[go.mod]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
    },
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.wordWrapColumn": 120,
        "editor.fontSize": 14,
        "editor.quickSuggestions": false
    },
}